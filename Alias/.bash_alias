function fn_print_process_id() {
    function_id=`ps -ef | grep $1 | head -n 1 | cut -f5 -d " "`
    echo $function_id
}

function fn_run_python3_background() {
  nohup python3 $1.py 1> "$1.out" 2> "$1.err" &
}

function fn_print_directory_size() {
    sudo du -sh $1
}

function fn_mkdircd() {
  mkdir "$1"
  cd "$1"
}

